<div class="container-fluid bg-black p-3 flex flex-row fixed-top h-">
  <a href="/" class="text-center text-decoration-none text-yellow-200 fs-5 mx-3 fw-bolder">HOME</a>
  <a href="/addCar" class="text-center text-decoration-none text-yellow-300 fs-5 mx-3 fw-bolder">ADD</a>
  <a href="/carsList" class="text-center text-decoration-none text-yellow-200 fs-5 mx-3 fw-bolder">LIST</a>
  <a href="carsEdit" class="text-center text-decoration-none text-yellow-200 fs-5 mx-3 fw-bolder">EDIT</a>
</div>
<div class="container-fluid bg-dark text-white d-flex flex-column align-items-flex-start justify-content-flex-start px-5" style="min-height: 100vh; padding-top: 80px;">
    <h1 class="w-100 fw-normal text-white fs-3">ADD A CAR</h1>
    <form action="/addCar" method="post" class="d-flex flex-column" style="width: fit-content;">
        <div class="d-flex flex-row my-1">
            <input type="checkbox" name="isInsured" id="isInsured-checkbox">
            <label for="isInsured-checkbox" class="mx-2">Insured</label>
        </div>
        <div class="d-flex flex-row my-1">
            <input type="checkbox" name="isPetrolCar" id="isPetrolCar-checkbox">
            <label for="isPetrolCar-checkbox" class="mx-2">Petrol car</label>
        </div>
        <div class="d-flex flex-row my-1">
            <input type="checkbox" name="isDamaged" id="isDamaged-checkbox">
            <label for="isDamaged-checkbox" class="mx-2">Damaged</label>
        </div>
        <div class="d-flex flex-row my-1">
            <input type="checkbox" name="isFourByFour" id="isFourByFour-checkbox">
            <label for="isFourByFour-checkbox" class="mx-2">Four-by-four</label>
        </div>
        <div class="d-flex flex-row my-1">
            <button type="submit" class="btn btn-warning text-dark fw-bold mt-1">ADD</button>
        </div>
    </form>
    {{#if alert}}
       <div class="rounded-2 bg-white text-dark p-2" style="width: fit-content;">{{{ alert }}}</div>
    {{/if}}
</div>